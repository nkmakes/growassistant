output:
  - platform: ledc
    channel: 5
    pin: GPIO4
    id: gpio_4
  - platform: ledc
    channel: 4
    pin: GPIO13
    id: gpio_13
    
light:
  - platform: monochromatic
    output: gpio_13
    name: "LDD700L"
    id: ldd
  - platform: monochromatic
    output: gpio_4
    name: "plant flash"
    id: plant_flash
    
sensor:
  - platform: dht
    model: DHT22
    pin: GPIO2
    temperature:
      name: "Plant Temperature"
      id: plant_temp
    humidity:
      name: "Plant Humidity"
      id: plant_hum
    update_interval: 60s
    
font:
  - file: 'slkscr.ttf'
    id: font1
    size: 8

  - file: 'BebasNeue-Regular.ttf'
    id: font2
    size: 48

  - file: 'arial.ttf'
    id: font3
    size: 14
    
time:
  - platform: homeassistant
    id: esptime
    
i2c:
  sda: GPIO15
  scl: GPIO14
  scan: False

display:
  - platform: ssd1306_i2c
    model: "SSD1306 128x64"
    address: 0x3C
    rotation: 180
    lambda: |-
      // Print "Grass" in top center.
      it.printf(64, 0, id(font1), TextAlign::TOP_CENTER, "Grow Assistant");
      // Print time in HH:MM format
      it.strftime(0, 60, id(font2), TextAlign::BASELINE_LEFT, "%H:%M", id(esptime).now());

      // Print inside temperature (from homeassistant sensor)
      if (id(plant_temp).has_state()) {
        it.printf(127, 23, id(font3), TextAlign::TOP_RIGHT , "%.1f Â°", id(plant_temp).state);
      }

      // Print outside temperature (from homeassistant sensor)
      if (id(plant_hum).has_state()) {
        it.printf(127, 60, id(font3), TextAlign::BASELINE_RIGHT , "%.1f %%", id(plant_hum).state);
      }