esphome:
  name: esp32_led
  platform: ESP32
  board: esp32cam

wifi:
  ssid: "yourSSID"
  password: "yourPASSWD"
  fast_connect: True
  #power_save_mode: none
  manual_ip:
    # Set this to the IP of the ESP
    static_ip: 192.168.1.40
